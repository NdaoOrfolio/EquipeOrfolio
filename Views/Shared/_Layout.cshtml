<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - OrfolioÉquipe</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/orfolio-style.css" rel="stylesheet" type="text/css" />
    @Scripts.Render("~/bundles/modernizr")
</head> 
<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-primary">
        <div class="container">
            @Html.ActionLink("OrfolioÉquipe", "Index", "Home", null, new { @class = "navbar-brand text-white fw-bold" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Activer/désactiver la navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">@Html.ActionLink("Accueil", "Index", "Home", null, new { @class = "nav-link text-white" })</li>
                    <li class="nav-item">@Html.ActionLink("Candidats", "Index", "Candidat", null, new { @class = "nav-link text-white" })</li>
                    <li class="nav-item">@Html.ActionLink("Stages", "Index", "Stage", null, new { @class = "nav-link text-white" })</li>
                    <li class="nav-item">@Html.ActionLink("Consultants", "Index", "Consultant", null, new { @class = "nav-link text-white" })</li>
                    <li class="nav-item">@Html.ActionLink("À propos", "About", "Home", null, new { @class = "nav-link text-white" })</li>
                    <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link text-white" })</li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content mt-4">
        @RenderBody()
        <hr />
        <footer class="text-center text-muted mt-4">
            <p>&copy; @DateTime.Now.Year - OrfolioÉquipe, développé pour Studio Orfolio</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
